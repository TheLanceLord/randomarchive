{
    "displayName": "500 error threshold",
    "combiner": "OR",
    "conditions": [
        {
            "displayName": "500 error count is too high",
            "conditionThreshold": {
                "aggregations": [
                    {
                        "alignmentPeriod": "300s",
                        "crossSeriesReducer": "REDUCE_SUM",
                        "groupByFields": [
                            "project",
                            "metric.label.response_code"
                        ],
                        "perSeriesAligner": "ALIGN_MAX"
                    }
                ],
                "comparison": "COMPARISON_GT",
                "duration": "300s",
                "filter": "metric.label.response_code>=\"500\" AND
                          metric.label.response_code<\"600\" AND
                          metric.type=\"loadbalancing.googleapis.com/https/request_count\" AND
                          project=\"<YOUR_PROJECT>\" AND
                          resource.type=\"https_lb_rule\"",
                "thresholdValue": 20,
                "trigger": {
                    "count": 1
                }
            }
        }
    ]
}
